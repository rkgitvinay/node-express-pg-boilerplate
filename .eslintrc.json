{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "import/extensions": "off",
    "func-names": ["warn", "as-needed"],
    "consistent-return": "warn",
    "no-return-await": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_|context" }]
  }
}
